<Window x:Class="Gomoku_Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku_Client"
        xmlns:converters="clr-namespace:Gomoku_Client.Converters"
        Icon="\Assets\Gomoku.ico"
        mc:Ignorable="d"
        Background="#F0F0F0" 
        Title="Gomoku" Height="720" Width="1280" 
        WindowStyle="None" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <converters:StringEmptyToVisibilityConverter x:Key="StringEmptyToVisibilityConverter"/>
        <Style x:Key="BlueButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <!-- Xanh dương -->
            <Setter Property="Foreground" Value="White"/>
            <!-- Chữ trắng -->
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                                <!-- Tối lại khi hover -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                                <!-- Nhấn xuống -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WhiteBlueButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <!-- Nền trắng -->
            <Setter Property="Foreground" Value="#0078D7"/>
            <!-- Chữ xanh -->
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderBrush" Value="#0078D7"/>
            <!-- Viền xanh -->
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="22">
                            <!-- Bo góc -->
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>

                        <!-- Hiệu ứng hover và nhấn -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5F1FB"/>
                                <!-- Xanh nhạt khi hover -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CCE4F7"/>
                                <!-- Đậm hơn khi nhấn -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    
    
    <Grid Width="1280">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Login_Background.png" 
                        Stretch="UniformToFill"
                        Opacity="0.3"/>
        </Grid.Background>

        <Border x:Name="MainBorder" 
                Background="#F9F9F9"
                BorderBrush="#0078D7"
                BorderThickness="2"
                CornerRadius="22"
                Padding="20"
                Width="410"
                Height="300"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid x:Name="EmailBorder1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>

                <!-- Label đăng nhập -->
                <TextBlock Text="Đăng nhập vào Gomoku"
                       Grid.Row="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#0078D7"  
                       FontFamily="Segoe UI"
                       FontSize="24"         
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

                <!-- Quên mật khẩu -->
                <TextBlock Grid.Row="6" 
                           FontFamily="Segoe UI"
                           FontSize="14"
                           FontWeight="SemiBold" 
                           HorizontalAlignment="Right" 
                           Margin="0,12,35,0" 
                           Height="20" 
                           VerticalAlignment="Top">
                    <Hyperlink Click="Hyperlink_Click">
                        Quên mật khẩu?
                    </Hyperlink>
                </TextBlock>

                <!-- Đăng ký tài khoản -->
                <TextBlock Grid.Row="6" 
                   FontFamily="Segoe UI"
                   FontSize="14"
                   FontWeight="SemiBold" 
                   HorizontalAlignment="Left" 
                   Margin="16,12,0,0" 
                   Height="20" 
                   VerticalAlignment="Top">
                    <Hyperlink Click="SignUp_Click">
                        Đăng ký tài khoản mới
                    </Hyperlink>
                </TextBlock>

                <!-- Hai nút -->
                <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0" >
                    <Button x:Name="LoginButton" Style="{StaticResource BlueButton}"
                            Content="Đăng Nhập"
                            Width="180" Height="40"
                            Margin="0,0,0,0" Click="LoginButton_Click"/>
                    <Button Style="{StaticResource WhiteBlueButton}"
                            Content="Thoát"
                            Width="180" Height="40"
                            Margin="5,0,0,0" Click="ExitButton_Click"/>
                </StackPanel>
                
                <!-- Loading Circle-->
                <Grid Grid.Row="5">
                    <Grid.Resources>
                        <!-- Animation quay -->
                        <Storyboard x:Key="SpinAnimation" RepeatBehavior="Forever">
                            <DoubleAnimation
                                Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                From="0" To="360" Duration="0:0:1"
                                RepeatBehavior="Forever"/>
                        </Storyboard>
                    </Grid.Resources>

                    <!-- Loading Circle -->
                    <Ellipse x:Name="LoadingCircle"
                        Width="30"
                        Height="30"
                        Stroke="White"
                        StrokeThickness="4"
                        StrokeDashArray="10 200"
                        RenderTransformOrigin="0.5,0.5" 
                        Margin="75,35,261,5"
                        Visibility="Collapsed">
                        <Ellipse.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </Ellipse.RenderTransform>
                        <Ellipse.Triggers>
                            <EventTrigger RoutedEvent="Loaded">
                                <BeginStoryboard Storyboard="{StaticResource SpinAnimation}"/>
                            </EventTrigger>
                        </Ellipse.Triggers>
                    </Ellipse>
                </Grid>

                <!-- Email box -->
                <Border x:Name="EmailBorder"
                        Grid.Row="1"
                        Background="#F3F3F3"
                        CornerRadius="8"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Padding="2">
                    <StackPanel>
                        <TextBox x:Name="EmailBox"
                             Height="36"
                             FontSize="14"
                             Padding="10,7"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="Gray"
                             FontFamily="Segoe UI"
                             FontWeight="SemiBold"
                             FontStyle="Normal"
                             Text="Email"
                             GotFocus="EmailBox_GotFocus"
                             LostFocus="EmailBox_LostFocus">
                        </TextBox>
                        <TextBlock x:Name="EmailError"
                           Foreground="Red"
                           FontSize="12"
                           Visibility="Collapsed"/>
                    </StackPanel>


                </Border>

                <!-- Thông báo sai Email -->
                <TextBlock x:Name="EmailNotFoundText" 
                   Text="Không tìm thấy tài khoản với email này"
                   Grid.Row="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Foreground="Red"  
                   FontFamily="Segoe UI"
                   FontSize="12"         
                   FontWeight="Bold"
                   Margin="9,0,0,0"
                   Visibility="Collapsed"/>

                <!-- Thông báo sai Password -->
                <TextBlock x:Name="WrongPassText" 
                   Text="Mật khẩu không được dưới 6 ký tự"
                   Grid.Row="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Foreground="Red"  
                   FontFamily="Segoe UI"
                   FontSize="12"         
                   FontWeight="Bold"
                   Margin="9,0,0,0"
                   Visibility="Collapsed"/>

                <!-- Password box -->
                <Border x:Name="PasswordBorder" 
                    Grid.Row="3"
                    Background="#F3F3F3"
                    CornerRadius="8"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    Padding="2" 
                    Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                            <!-- cho nút 👁 -->
                        </Grid.ColumnDefinitions>
                        <PasswordBox x:Name="PasswordBox"
                            Height="36"
                            FontSize="14"
                            Padding="10,7"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            FontFamily="Segoe UI"
                            FontWeight="SemiBold"
                            FontStyle="Normal"
                            PreviewKeyDown="PasswordBox_PreviewKeyDown"
                            PasswordChanged="PasswordBox_PasswordChanged" 
                            LostFocus="PasswordBox_LostFocus"
                            Grid.ColumnSpan="2"/>
                        
                        <TextBlock x:Name="PasswordPlaceholder"
                            Text="Mật khẩu"
                            Foreground="Gray"
                            FontSize="14"
                            FontFamily="Segoe UI"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"
                            Margin="12,0,0,0"
                            IsHitTestVisible="False"
                            Visibility="{Binding ElementName=PasswordBox, Path=Password, Converter={StaticResource StringEmptyToVisibilityConverter}}" 
                            Grid.ColumnSpan="2"/>

                        <TextBox x:Name="PasswordVisible"
                             Height="36"
                             FontSize="14"
                             Padding="10,7"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="Black"
                             FontFamily="Segoe UI"
                             FontWeight="SemiBold"
                             Visibility="Collapsed"
                             PreviewKeyDown="PasswordVisible_PreviewKeyDown"
                             TextChanged="PasswordVisible_TextChanged"
                             Grid.ColumnSpan="2"/>

                        <Button x:Name="TogglePasswordBtn"
                            Grid.Column="1"
                            Content="👁"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="TogglePasswordBtn_Click"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <Border x:Name="LoadingBorder" 
        Background="#F9F9F9"
        BorderBrush="#0078D7"
        BorderThickness="2"
        CornerRadius="22"
        Padding="20"
        Width="410"
        Height="300"
        HorizontalAlignment="Center"
        VerticalAlignment="Center" 
        Visibility="Collapsed" Opacity="0.7">
            <Grid>
                <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Đang đăng nhập..."
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#0078D7"  
                       FontFamily="Segoe UI"
                       FontSize="20"         
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>
                    <ProgressBar IsIndeterminate="True" Width="300" Height="20"/>
                </StackPanel>
            </Grid>
        </Border>
        
        
        <Frame x:Name="MainFrame"
            NavigationUIVisibility="Hidden"
            Visibility="Collapsed" />
    </Grid>
</Window>