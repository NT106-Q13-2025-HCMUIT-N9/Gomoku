<Page x:Class="Gomoku_Client.ForgotPasswordUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku_Client"
        xmlns:converters="clr-namespace:Gomoku_Client.Converters"
        mc:Ignorable="d"
        Title="Quên mật khẩu"
        Background="#F0F0F0" 
        Height="720" Width="1280">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Width="1280" Height="720">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Login_Background.png" 
                Stretch="UniformToFill"
                Opacity="1"/>
        </Grid.Background>

        <Grid Width="1280" Height="720">
            <Border x:Name="GetEmailGrid" Background="Black"
            BorderBrush="#FF4655"
            BorderThickness="2"
            CornerRadius="0"
            Padding="20"
            Width="430"
            Height="205"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Visible"
            Margin="0,0,0,60">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--Nhập Email Label-->
                    <TextBlock Text="Nhập Email liên kết tài khoản"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#FF4655"  
                    FontFamily="Segoe UI"
                    FontSize="24"         
                    FontWeight="Bold"
                    Margin="0,0,0,20"/>

                    <!--Nhập Email Border -->
                    <Border x:Name="EmailBorder" 
                    Grid.Row="1"
                    Background="#121212"
                    CornerRadius="0"
                    BorderBrush="#2A2A2A"
                    BorderThickness="2"
                    Padding="2">
                        <TextBox x:Name="EmailBox"
                        CaretBrush="White"
                        Height="36"
                        FontSize="14"
                        Padding="10,7"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="Gray"
                        FontFamily="Segoe UI"
                        FontWeight="SemiBold"
                        FontStyle="Normal"
                        Text="Email khôi phục"
                        GotFocus="Email_GotFocus"
                        LostFocus="Email_LostFocus"
                        PreviewKeyDown="EmailBox_PreviewKeyDown"/>
                    </Border>

                    <!-- Hai nút chính -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
                        <Button 
                        Content="Quay lại"
                        Width="170"
                        Height="40"
                        Background="White"
                        Foreground="#FF4655"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="10,5"
                        BorderBrush="White"
                        BorderThickness="0"
                        Cursor="Hand" 
                        Margin="0,0,0,0" Click="Button_Click"/>

                        <Button 
                        Content="Gửi mã xác thực"
                        Width="170"
                        Height="40"
                        Background="#FF4655"
                        Foreground="White"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="10,5"
                        BorderBrush="#FF4655"
                        BorderThickness="0"
                        Cursor="Hand" 
                        Margin="15,0,0,0" Click="SendOTP_Click"/>
                    </StackPanel>

                    <!-- Thông báo sai Email -->
                    <TextBlock x:Name="EmailNotFoundText" 
                   Text="Không tìm thấy tài khoản với email này"
                   Grid.Row="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Foreground="#FF4655"  
                   FontFamily="Segoe UI"
                   FontSize="12"         
                   FontWeight="Bold"
                   Margin="9,0,0,0"
                   Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
