<Window x:Class="Gomoku_Client.ForgotPasswordUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku_Client"
        xmlns:converters="clr-namespace:Gomoku_Client.Converters"
        mc:Ignorable="d"
        Icon="\Assets\Gomoku.ico"
        Title="Quên mật khẩu"
        Background="#F0F0F0" 
        Height="720" Width="1280" ResizeMode="NoResize" WindowStyle="SingleBorderWindow" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <converters:StringEmptyToVisibilityConverter x:Key="StringEmptyToVisibilityConverter"/>
        <Style x:Key="BlueButton" TargetType="Button">
            <Setter Property="Background" Value="#0078D7"/>
            <!-- Xanh dương -->
            <Setter Property="Foreground" Value="White"/>
            <!-- Chữ trắng -->
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}"
                          CornerRadius="22">
                            <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                                <!-- Tối lại khi hover -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                                <!-- Nhấn xuống -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="WhiteBlueButton" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <!-- Nền trắng -->
            <Setter Property="Foreground" Value="#0078D7"/>
            <!-- Chữ xanh -->
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderBrush" Value="#0078D7"/>
            <!-- Viền xanh -->
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                          BorderBrush="{TemplateBinding BorderBrush}"
                          BorderThickness="{TemplateBinding BorderThickness}"
                          CornerRadius="22">
                            <!-- Bo góc -->
                            <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                        </Border>

                        <!-- Hiệu ứng hover và nhấn -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#E5F1FB"/>
                                <!-- Xanh nhạt khi hover -->
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#CCE4F7"/>
                                <!-- Đậm hơn khi nhấn -->
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid Width="1280" Height="720">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Login_Background.png" 
                Stretch="UniformToFill"
                Opacity="0.3"/>
        </Grid.Background>
        
        <Grid Width="1280" Height="720">
        <Border x:Name="GetEmailGrid" Background="#F9F9F9"
            BorderBrush="#0078D7"
            BorderThickness="2"
            CornerRadius="22"
            Padding="20"
            Width="430"
            Height="220"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Visible">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Nhập Email liên kết tài khoản"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#0078D7"  
                    FontFamily="Segoe UI"
                    FontSize="24"         
                    FontWeight="Bold"
                    Margin="0,0,0,20"/>

                <Border Grid.Row="1"
                    Background="#F3F3F3"
                    CornerRadius="8"
                    BorderBrush="#CCCCCC"
                    BorderThickness="1"
                    Padding="2">
                    <TextBox x:Name="EmailBox"
                        Height="36"
                        FontSize="14"
                        Padding="10,7"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="Gray"
                        FontFamily="Segoe UI"
                        FontWeight="SemiBold"
                        FontStyle="Normal"
                        Text="Email khôi phục"
                        GotFocus="Email_GotFocus"
                        LostFocus="Email_LostFocus"/>
                </Border>

                <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0" >
                    <Button Style="{StaticResource WhiteBlueButton}"
                        Content="Quay lại"
                        Width="180" Height="40"
                        Margin="0,0,0,0" Click="Button_Click"/>

                    <Button Style="{StaticResource BlueButton}"
                        Content="Gửi mã xác thực"
                        Width="180" Height="40"
                        Margin="5,0,0,0" Click="SendOTP_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>

        <Grid Width="1280" Height="720">
            <Border x:Name="GetOTPGrid" Background="#F9F9F9"
        BorderBrush="#0078D7"
        BorderThickness="2"
        CornerRadius="22"
        Padding="20"
        Width="430"
        Height="220"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"
        Visibility="Collapsed">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Nhập OTP xác thực"
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="#0078D7"  
                FontFamily="Segoe UI"
                FontSize="24"         
                FontWeight="Bold"
                Margin="0,0,0,20"/>

                    <Border Grid.Row="1"
                Background="#F3F3F3"
                CornerRadius="8"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Padding="2">
                        <TextBox x:Name="OTPBox"
                    Height="36"
                    FontSize="14"
                    Padding="10,7"
                    Background="Transparent"
                    BorderThickness="0"
                    Foreground="Gray"
                    FontFamily="Segoe UI"
                    FontWeight="SemiBold"
                    FontStyle="Normal"
                    Text="Mã OTP"
                    GotFocus="OTPBox_GotFocus"
                    LostFocus="OTPBox_LostFocus"/>
                    </Border>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0" >
                        <Button Style="{StaticResource WhiteBlueButton}"
                    Content="Quay lại"
                    Width="180" Height="40"
                    Margin="0,0,0,0" Click="Back_From_OPTGrid_Click" />

                        <Button Style="{StaticResource BlueButton}"
                    Content="Xác nhận"
                    Width="180" Height="40"
                    Margin="5,0,0,0" Click="OTPConfirm_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <Grid Width="1280" Height="720">
            <Border x:Name="SetPasswordGrid" Background="#F9F9F9"
                BorderBrush="#0078D7"
                BorderThickness="2"
                CornerRadius="22"
                Padding="20"
                Width="430"
                Height="270"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="13"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Tạo mật khẩu mới"
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Foreground="#0078D7"  
                        FontFamily="Segoe UI"
                        FontSize="24"         
                        FontWeight="Bold"
                        Margin="0,0,0,20"/>

                    <Border Grid.Row="1"
                        Background="#F3F3F3"
                        CornerRadius="8"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Padding="2">
                        <Grid>
                        <PasswordBox x:Name="NewPasswordBox"
                            Height="36"
                            FontSize="14"
                            Padding="10,7"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"
                            FontFamily="Segoe UI"
                            FontWeight="SemiBold"
                            FontStyle="Normal"
                            PasswordChanged="NewPasswordBox_PasswordChanged"/>
                            <TextBlock x:Name="NewPasswordPlaceholder"
                                Text="Mật khẩu mới"
                                Foreground="Gray"
                                FontSize="14"
                                FontFamily="Segoe UI"
                                FontWeight="SemiBold"
                                VerticalAlignment="Center"
                                Margin="12,0,0,0"
                                IsHitTestVisible="False"
                                Visibility="{Binding ElementName=NewPasswordBox, Path=Password, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>
                        </Grid>
                    </Border>

                    <Border Grid.Row="3"
                        Background="#F3F3F3"
                        CornerRadius="8"
                        BorderBrush="#CCCCCC"
                        BorderThickness="1"
                        Padding="2">
                        <Grid>
                            <PasswordBox x:Name="NewPasswordConfirmBox"
                            Height="36"
                            FontSize="14"
                            Padding="10,7"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="Black"  FontFamily="Segoe UI"
                            FontWeight="SemiBold"
                            FontStyle="Normal"
                            PasswordChanged="NewPasswordConfirmBox_PasswordChanged"/>
                            <TextBlock x:Name="NewPasswordConfirmPlaceholder"
                                Text="Xác nhận mật khẩu mới"
                                Foreground="Gray"  FontSize="14"
                                FontFamily="Segoe UI"
                                FontWeight="SemiBold"
                                VerticalAlignment="Center"
                                Margin="12,0,0,0"
                                IsHitTestVisible="False"
                                Visibility="{Binding ElementName=NewPasswordConfirmBox, Path=Password, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>  
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,0" >
                        <Button Style="{StaticResource WhiteBlueButton}"
                    Content="Quay lại"
                    Width="180" Height="40"
                    Margin="0,0,0,0" Click="Back_From_SetPasswordGrid_Click" />

                        <Button Style="{StaticResource BlueButton}"
                    Content="Đặt lại mật khẩu"
                    Width="180" Height="40"
                    Margin="5,0,0,0" Click="Set_Password_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>


</Window>
