<Page x:Class="Gomoku_Client.ForgotPasswordUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku_Client"
        xmlns:converters="clr-namespace:Gomoku_Client.Converters"
        mc:Ignorable="d"
        Title="Quên mật khẩu"
        Background="#F0F0F0" 
        Height="720" Width="1280">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Width="1280" Height="720">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Images/Login_Background.png" 
                Stretch="UniformToFill"
                Opacity="1"/>
        </Grid.Background>

        <!-- Confirmation  Overlay -->
        <Grid x:Name="ConfirmationOverlay" 
              Visibility="Collapsed" 
              Panel.ZIndex="1000">
            <Grid.Background>
                <SolidColorBrush Color="#000000" Opacity="0.7"/>
            </Grid.Background>

            <Border HorizontalAlignment="Center" 
                    VerticalAlignment="Center"
                    RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>

                <!-- popup card -->
                <Border Background="Black" 
                        CornerRadius="3" 
                        Width="500" 
                        Padding="0"
                        BorderBrush="#4CAF50" 
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#4CAF50" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- vv BELOW ARE POPUP CONTENT vv -->
                        <StackPanel Grid.Row="1" Margin="40,40,40,30">
                            <!-- icon -->
                            <Border Width="80" Height="80" 
                                    CornerRadius="40" 
                                    Background="#2A2E39"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,20">
                                <Border.Effect>
                                    <DropShadowEffect Color="#4CAF50" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <Viewbox Width="45" Height="45" 
                                         HorizontalAlignment="Center" 
                                         VerticalAlignment="Center">
                                    <Canvas Width="24" Height="24">
                                        <!-- Door frame -->
                                        <Path Fill="#4CAF50" 
                                            Data="M9,16.17L4.83,12L3.41,13.41L9,19L21,7L19.59,5.59L9,16.17Z"/>
                                    </Canvas>
                                </Viewbox>
                            </Border>

                            <!-- title -->
                            <TextBlock Text="ĐÃ GỬI LINK CẬP NHẬT MẬT KHẨU" 
                                       FontSize="23" 
                                       FontWeight="Bold" 
                                       FontFamily="Segoe UI"
                                       Foreground="White" 
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,8"/>

                            <!-- message -->
                            <TextBlock Text="Vui lòng kiểm tra email về thông tin đăng nhập" 
                                       FontSize="16" 
                                       Foreground="#B0B0B0" 
                                       TextWrapping="Wrap"
                                       HorizontalAlignment="Center"
                                       TextAlignment="Center"
                                       LineHeight="24"/>
                        </StackPanel>

                        <!-- action -->
                        <Grid Grid.Row="2" 
                              Margin="40,0,40,40">
                            <!-- confirm -->
                            <Button Grid.Column="2"
                                x:Name="ConfirmationButton"
                                Content="VỀ TRANG ĐĂNG NHẬP" 
                                Height="54"
                                Width="230"
                                Click="ConfirmationButton_Click"
                                Style="{StaticResource ConfirmGreenButton}"/>
                        </Grid>
                    </Grid>
                </Border>
            </Border>
        </Grid>

        <!-- ConfirmFailedOverlay-->
        <Grid x:Name="ConfirmFailedOverlay" 
      Visibility="Collapsed" 
      Panel.ZIndex="1000">
            <Grid.Background>
                <SolidColorBrush Color="#000000" Opacity="0.7"/>
            </Grid.Background>

            <Border HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>

                <!-- popup card -->
                <Border Background="Black" 
                CornerRadius="3" 
                Width="500" 
                Padding="0"
                BorderBrush="#FF4655" 
                BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF4655" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- vv BELOW ARE POPUP CONTENT vv -->
                        <StackPanel Grid.Row="1" Margin="40,40,40,30">
                            <!-- icon -->
                            <Border Width="80" Height="80" 
                            CornerRadius="40" 
                            Background="#2A2E39"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,20">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF4655" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <Viewbox Width="45" Height="45" 
                                 HorizontalAlignment="Center" 
                                 VerticalAlignment="Center">
                                    <Canvas Width="24" Height="24">
                                        <!-- Door frame -->
                                        <Path Fill="#FF4655" 
                                     Data="M19,6.41L17.59,5L12,10.59L6.41,5L5,6.41L10.59,12L5,17.59L6.41,19L12,13.41L17.59,19L19,17.59L13.41,12L19,6.41Z"/>
                                    </Canvas>
                                </Viewbox>
                            </Border>

                            <!-- title -->
                            <TextBlock Text="GỬI LINK THẤT BẠI" 
                               FontSize="28" 
                               FontWeight="Bold" 
                               FontFamily="Segoe UI"
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                            <!-- message -->
                            <TextBlock x:Name="ConfirmationFailedMessage"
                               Text="Chương trình đã xảy ra lỗi" 
                               FontSize="16" 
                               Foreground="#B0B0B0" 
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               LineHeight="24"/>
                        </StackPanel>

                        <!-- action -->
                        <Grid Grid.Row="2" 
                      Margin="40,0,40,40">
                            <!-- confirm -->
                            <Button Grid.Column="2"
                            x:Name="ConfirmationFailedButton"
                            Content="QUAY LẠI" 
                            Height="54"
                            Width="230"
                            Click="ConfirmationFailedButton_Click"
                            Style="{StaticResource ConfirmButton}"/>
                        </Grid>
                    </Grid>
                </Border>
            </Border>
        </Grid>

        <Grid Width="1280" Height="720">
            <Border x:Name="GetEmailGrid" Background="Black"
            BorderBrush="#FF4655"
            BorderThickness="2"
            CornerRadius="0"
            Padding="20"
            Width="430"
            Height="205"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Visibility="Visible"
            Margin="0,0,0,60">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!--Nhập Email Label-->
                    <TextBlock Text="Nhập Email liên kết tài khoản"
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="#FF4655"  
                    FontFamily="Segoe UI"
                    FontSize="24"         
                    FontWeight="Bold"
                    Margin="0,0,0,20"/>

                    <!--Nhập Email Border -->
                    <Border x:Name="EmailBorder" 
                    Grid.Row="1"
                    Background="#121212"
                    CornerRadius="0"
                    BorderBrush="#2A2A2A"
                    BorderThickness="2"
                    Padding="2">
                        <TextBox x:Name="EmailBox"
                        CaretBrush="White"
                        Height="36"
                        FontSize="14"
                        Padding="10,7"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="Gray"
                        FontFamily="Segoe UI"
                        FontWeight="SemiBold"
                        FontStyle="Normal"
                        Text="Email khôi phục"
                        GotFocus="Email_GotFocus"
                        LostFocus="Email_LostFocus"
                        PreviewKeyDown="EmailBox_PreviewKeyDown"/>
                    </Border>

                    <!-- Loading circle-->
                    <Grid Grid.Row="3"
                          Panel.ZIndex="100">
                        <Grid.Resources>
                            <!-- Animation quay -->
                            <Storyboard x:Key="SpinAnimation" RepeatBehavior="Forever">
                                <DoubleAnimation
                                    Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                    From="0" To="360" Duration="0:0:1"
                                    RepeatBehavior="Forever"/>
                            </Storyboard>
                        </Grid.Resources>

                        <!-- Loading Circle -->
                        <Ellipse x:Name="LoadingCircle"
                                Width="30"
                                Height="30"
                                Stroke="White"
                                StrokeThickness="4"
                                StrokeDashArray="10 200"
                                RenderTransformOrigin="0.5,0.5" 
                                Margin="187,25,0,5"
                                Visibility="Collapsed">
                            <Ellipse.RenderTransform>
                                <RotateTransform Angle="0"/>
                            </Ellipse.RenderTransform>
                            <Ellipse.Triggers>
                                <EventTrigger RoutedEvent="Loaded">
                                    <BeginStoryboard Storyboard="{StaticResource SpinAnimation}"/>
                                </EventTrigger>
                            </Ellipse.Triggers>
                        </Ellipse>
                    </Grid>
                    
                    <!-- Hai nút chính -->
                    <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
                        <Button x:Name="BackButton"
                        Content="Quay lại"
                        Width="170"
                        Height="40"
                        Background="White"
                        Foreground="#FF4655"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="10,5"
                        BorderBrush="White"
                        BorderThickness="0"
                        Cursor="Hand" 
                        Margin="0,0,0,0" Click="Button_Click"/>

                        <Button x:Name="SendOTPButton"
                        Content="Gửi mã xác thực"
                        Width="170"
                        Height="40"
                        Background="#FF4655"
                        Foreground="White"
                        FontFamily="Segoe UI"
                        FontSize="16"
                        FontWeight="Bold"
                        Padding="10,5"
                        BorderBrush="#FF4655"
                        BorderThickness="0"
                        Cursor="Hand" 
                        Margin="15,0,0,0" Click="SendOTP_Click"/>
                    </StackPanel>

                    <!-- Thông báo sai Email -->
                    <TextBlock x:Name="EmailNotFoundText" 
                   Text="Không tìm thấy tài khoản với email này"
                   Grid.Row="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Foreground="#FF4655"  
                   FontFamily="Segoe UI"
                   FontSize="12"         
                   FontWeight="Bold"
                   Margin="9,0,0,0"
                   Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Page>
