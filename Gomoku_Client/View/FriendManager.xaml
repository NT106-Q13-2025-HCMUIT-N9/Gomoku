<Page x:Class="Gomoku_Client.View.FriendManager"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Gomoku_Client.View"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="FriendManager"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded">







    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>










    <Grid>



        <!-- Background gradient Valorant -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0F1923" Offset="0"/>
                <GradientStop Color="#152635" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>




        <!-- Vùng Nội dung Riêng của Friend Manager -->
        <Grid Margin="30,80,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Add Friend & Friend Requests -->
            <StackPanel Grid.Column="0" Margin="0,0,15,0">

                <!-- Add Friend Section -->
                <Border Background="#1A1A2E" CornerRadius="12" Padding="25" Margin="0,0,0,20">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF4655" BlurRadius="25" ShadowDepth="0" Opacity="0.4"/>
                    </Border.Effect>

                    <StackPanel>
                        <TextBlock Text="THÊM BẠN BÈ" FontSize="16" FontWeight="Bold" 
                                   Foreground="#FF4655" Margin="0,0,0,15" FontFamily="Segoe UI Black"/>

                        <TextBlock Text="Nhập tên người chơi" FontSize="12" 
                                   Foreground="#8B8B8B" Margin="0,0,0,10"/>

                        <!-- Input Box -->
                        <Grid Margin="0,0,0,15">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="FriendUsernameInput" Grid.Column="0" Height="45" 
                                     Background="#0F0F1E" BorderBrush="#FF4655" BorderThickness="2" 
                                     Foreground="White" FontSize="14" 
                                     Padding="15,0" VerticalContentAlignment="Center"
                                     MaxLength="50"
                                     TextChanged="FriendUsernameInput_TextChanged">
                                <TextBox.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8,0,0,8"/>
                                    </Style>
                                </TextBox.Resources>
                            </TextBox>

                            <Button x:Name="btn_SendRequest" Grid.Column="1" Width="45" Height="45" Background="#FF4655" 
                                    BorderThickness="0" Cursor="Hand"
                                    Click="SendFriendRequest_Click">
                                <Button.Effect>
                                    <DropShadowEffect Color="#FF4655" BlurRadius="15" ShadowDepth="0" Opacity="0.6"/>
                                </Button.Effect>
                                <Path Data="M2,21 L23,12 L2,3 L2,10 L17,12 L2,14 Z" 
                                      Fill="White" Width="20" Height="20" Stretch="Uniform"/>
                            </Button>
                        </Grid>

                        <!-- Info Text -->
                        <TextBlock Text="💡 Bạn có thể gửi lời mời kết bạn bằng tên người chơi" 
                                   FontSize="11" Foreground="#8B8B8B" TextWrapping="Wrap"
                                   LineHeight="16"/>
                    </StackPanel>
                </Border>

                <!-- Friend Requests Section -->
                <Border Background="#1A1A2E" CornerRadius="12" Padding="20" Height="403">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,15">
                            <TextBlock Text="LỜI MỜI KẾT BẠN" FontSize="14" FontWeight="Bold" 
                                       Foreground="#FFD700" FontFamily="Segoe UI Black"/>
                        </Grid>

                        <!-- Request List -->
                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="320">
                            <StackPanel x:Name="FriendRequestsPanel">

                                <!-- Friend Request Card Example -->
                                <Border Style="{StaticResource FriendCardStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Avatar -->
                                        <Border Grid.Column="0" Width="45" Height="45" CornerRadius="22.5" 
                                                BorderBrush="#FFD700" BorderThickness="2" Margin="0,0,12,0">
                                            <Border.Background>
                                                <ImageBrush ImageSource="/Assets/Gomoku.ico" Stretch="UniformToFill"/>
                                            </Border.Background>
                                        </Border>

                                        <!-- Name  -->
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <TextBlock Text="PlayerName123" FontSize="14" 
                                                       FontWeight="SemiBold" Foreground="#ECECEC"/>
                                        </StackPanel>

                                        <!-- Action Buttons -->
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                            <Button x:Name="AcceptButton" Width="35" Height="35" Background="#00D946" 
                                                    BorderThickness="0" Cursor="Hand"
                                                    Margin="0,0,5,0" ToolTip="Chấp nhận" Click="AcceptButton_Click">
                                                <Path Data="M5,12 L10,17 L20,7" Stroke="White" 
                                                      StrokeThickness="2.5" Width="16" Height="16" Stretch="Uniform"/>
                                            </Button>
                                            <Button x:Name="RefuseButton" Width="35" Height="35" Background="#FF4655" 
                                                    BorderThickness="0" Cursor="Hand"
                                                    ToolTip="Từ chối" Click="RefuseButton_Click">
                                                <Path Data="M6,6 L18,18 M18,6 L6,18" Stroke="White" 
                                                      StrokeThickness="2.5" Width="16" Height="16" Stretch="Uniform"/>
                                            </Button>
                                        </StackPanel>
                                    </Grid>
                                </Border>


                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Right Panel - Friends List -->
            <Border Grid.Column="1" Background="#1A1A2E" CornerRadius="12" Padding="0" Margin="15,0,0,0">
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="5" Opacity="0.5"/>
                </Border.Effect>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header -->
                    <Border Grid.Row="0" Background="#0F0F1E" CornerRadius="12,12,0,0" Padding="25,18">
                        <Grid>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="DANH SÁCH BẠN BÈ" FontSize="16" FontWeight="Bold" 
                                           Foreground="#FFFFFF" FontFamily="Segoe UI Black" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock x:Name="TotalFriendsCount" Text="24 bạn bè" FontSize="12" 
                                       Foreground="#8B8B8B" HorizontalAlignment="Right" 
                                       VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Friends List -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20">
                        <StackPanel x:Name="FriendsListPanel">

                            <!-- Friend Card -->
                            <Border Style="{StaticResource FriendCardStyle}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Avatar -->
                                    <Border Grid.Column="0" Width="50" Height="50" CornerRadius="25"
                                            BorderBrush="#8B8B8B" BorderThickness="2"
                                            Margin="0,0,15,0">
                                        <Border.Background>
                                            <ImageBrush ImageSource="/Assets/Gomoku.ico"/>
                                        </Border.Background>
                                    </Border>

                                    <!-- Name -->
                                    <TextBlock Grid.Column="1" Text="BestFriend2024" 
                                               VerticalAlignment="Center"
                                               FontSize="15" FontWeight="Bold" 
                                               Foreground="#ECECEC"/>

                                    <!-- Action Buttons -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">

                                        <!-- Thách đấu -->

                                        <Button x:Name="ChallengeButton"
                                                Width="50"
                                                Height="50"
                                                Background="#FF4655"
                                                BorderBrush="#FF4655"
                                                BorderThickness="2"
                                                Cursor="Hand"
                                                Margin="0,0,20,0" Click="ChallengeButton_Click">

                                            <Button.ToolTip>
                                                <ToolTip Content="Thách đấu"/>
                                            </Button.ToolTip>

                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid x:Name="Root">
                                                        <!-- Viền tròn -->
                                                        <Ellipse Fill="{TemplateBinding Background}"
                                                                 Stroke="{TemplateBinding BorderBrush}"
                                                                 StrokeThickness="{TemplateBinding BorderThickness}"/>

                                                        <!-- Icon -->
                                                        <Image Source="/Assets/Riot_Games_Logo.png"
                                                               Width="50"
                                                               Height="50"
                                                               Stretch="Fill"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                    </Grid>

                                                    <ControlTemplate.Triggers>

                                                        <!-- Hover: glow theo màu nút -->
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Root" Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect
                                                                        BlurRadius="20"
                                                                        ShadowDepth="0"
                                                                        Opacity="1"
                                                                        Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background.Color}"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>

                                                        <!-- Disabled sáng default của WPF -->
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="Root" Property="Opacity" Value="0.5"/>
                                                            <Setter TargetName="Root" Property="Effect" Value="{x:Null}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>

                                        </Button>


                                        <!-- Xóa bạn -->
                                        <Button x:Name="UnfriendButton"
                                                Width="50"
                                                Height="50"
                                                Background="#FF4655"
                                                BorderBrush="#FF4655"
                                                BorderThickness="2"
                                                Cursor="Hand"
                                                ToolTip="Xóa bạn" Click="UnfriendButton_Click">

                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Grid x:Name="Root">
                                                        <!-- Viền tròn -->
                                                        <Ellipse Fill="{TemplateBinding Background}"
                                                                 Stroke="{TemplateBinding BorderBrush}"
                                                                 StrokeThickness="{TemplateBinding BorderThickness}"/>

                                                        <!-- Icon -->
                                                        <Image Source="/Assets/delete-friend.png"
                                                               Width="50"
                                                               Height="50"
                                                               Stretch="Fill"
                                                               HorizontalAlignment="Center"
                                                               VerticalAlignment="Center"/>
                                                    </Grid>

                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter TargetName="Root" Property="Effect">
                                                                <Setter.Value>
                                                                    <DropShadowEffect
                                                                        BlurRadius="20"
                                                                        ShadowDepth="0"
                                                                        Opacity="1"
                                                                        Color="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=Background.Color}"/>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Trigger>

                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter TargetName="Root" Property="Opacity" Value="0.5"/>
                                                            <Setter TargetName="Root" Property="Effect" Value="{x:Null}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>

                                        </Button>

                                    </StackPanel>

                                </Grid>
                            </Border>

                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>

        </Grid>



        <!-- Top Navigation Bar -->
        <Border Height="60" VerticalAlignment="Top" Background="Transparent" Panel.ZIndex="1">
            <Border.Effect>
                <DropShadowEffect Color="#000000" BlurRadius="10" ShadowDepth="3" Opacity="0.5"/>
            </Border.Effect>
            <Grid>
                <RadioButton x:Name="BackButton" 
                             Content="Quay lại" 
                             Style="{StaticResource BackButton}" 
                             Checked="BackButton_Checked"/>
                <!-- Page Title -->
                <TextBlock Grid.Column="1" 
                           Text="BẠN BÈ" 
                           FontSize="25" 
                           FontWeight="Bold" 
                           Foreground="#FFFFFF" VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontFamily="Segoe UI Black"/>
            </Grid>
        </Border>


        <!-- Unfriend confirmation overlay -->
        <Grid x:Name="UnfriendConfirmationOverlay" 
              Visibility="Collapsed" 
              Panel.ZIndex="1000">
            <Grid.Background>
                <SolidColorBrush Color="#000000" Opacity="0.7"/>
            </Grid.Background>

            <Border HorizontalAlignment="Center" 
            VerticalAlignment="Center"
            RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>

                <!-- popup card -->
                <Border Background="#1A1F2E" 
                CornerRadius="3" 
                Width="500" 
                Padding="0"
                BorderBrush="#FF4655" 
                BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#FF4655" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
                    </Border.Effect>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- vv BELOW ARE POPUP CONTENT vv -->
                        <StackPanel Grid.Row="1" Margin="40,40,40,30">
                            <!-- icon -->
                            <Border Width="80" Height="80" 
                                    CornerRadius="40" 
                                    Background="#2A2E39"
                                    HorizontalAlignment="Center"
                                    Margin="0,0,0,20">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FF4655" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                                </Border.Effect>
                                <Grid>
                                    <!-- Person icon -->
                                    <Viewbox Width="45" Height="45" 
                                             HorizontalAlignment="Center" 
                                             VerticalAlignment="Center">
                                        <Canvas Width="24" Height="24">
                                            <Path Fill="#FF4655" 
                                                  Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"/>
                                        </Canvas>
                                    </Viewbox>
                                    <!-- X mark badge (bottom right) -->
                                    <Border Width="20" Height="20"
                                            CornerRadius="10"
                                            Background="White"
                                            HorizontalAlignment="Right" 
                                            VerticalAlignment="Bottom"
                                            Margin="0,0,10,10">
                                        <Viewbox Width="12" Height="12">
                                            <Canvas Width="24" Height="24">
                                                <Path Stroke="#FF4655" 
                                                      StrokeThickness="3" 
                                                      Data="M6,6 L18,18 M18,6 L6,18"/>
                                            </Canvas>
                                        </Viewbox>
                                    </Border>
                                </Grid>
                            </Border>

                            <!-- title -->
                            <TextBlock Text="XÁC NHẬN HỦY KẾT BẠN" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               FontFamily="Segoe UI"
                               Foreground="White" 
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                            <!-- message -->
                            <TextBlock Text="Bạn có chắc chắn muốn hủy kết bạn người này không?" 
                               FontSize="16" 
                               Foreground="#B0B0B0" 
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               LineHeight="24"/>
                        </StackPanel>

                        <!-- action -->
                        <Grid Grid.Row="2" 
                      Margin="40,0,40,40">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- cancel -->
                            <Button Grid.Column="0"
                            x:Name="CancelQuitButton"
                            Content="HỦY BỎ" 
                            Height="54"
                            Click="CancelButton_Click"
                            Style="{StaticResource CancelButton}"/>

                            <!-- confirm -->
                            <Button Grid.Column="2"
                            x:Name="ConfirmQuitButton"
                            Content="HỦY KẾT BẠN" 
                            Height="54"
                            Click="ConfirmButton_Click"
                            Style="{StaticResource ConfirmButton}"/>
                        </Grid>
                    </Grid>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Page>