<Window x:Class="Gomoku_Client.MainGameUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku_Client"
        mc:Ignorable="d"
        Icon="\Assets\Gomoku.ico"
        Title="Gomoku" Height="720" Width="1280" 
        WindowStyle="SingleBorderWindow" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="#0F1923">
    <Window.Resources>
        <Style x:Key="ValorantMenuItem" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ECE8E1"/>
            <Setter Property="FontFamily" Value="Impact"/>
            <Setter Property="FontSize" Value="50"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Grid Background="Transparent">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Rectangle x:Name="Bullet" Width="8" Height="8" 
                                   Fill="{TemplateBinding Foreground}" 
                                   RenderTransformOrigin="0.5,0.5" 
                                   Margin="0,0,20,0" 
                                   VerticalAlignment="Center">
                                    <Rectangle.RenderTransform>
                                        <RotateTransform Angle="45"/>
                                    </Rectangle.RenderTransform>
                                </Rectangle>

                                <Viewbox x:Name="ContentViewbox" 
                                 HorizontalAlignment="Left"
                                 Width="200" Height="50"
                                 Stretch="Uniform">
                                    <ContentPresenter x:Name="ContentText"
                                              HorizontalAlignment="Left" 
                                              VerticalAlignment="Center">
                                        <ContentPresenter.RenderTransform>
                                            <TranslateTransform x:Name="TranslateTransform" X="0" Y="0"/>
                                        </ContentPresenter.RenderTransform>
                                    </ContentPresenter>
                                </Viewbox>
                            </StackPanel>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <!-- Hover Animation -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="White"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ContentViewbox"
                                                     Storyboard.TargetProperty="Width"
                                                     To="250"
                                                     Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ContentViewbox"
                                                     Storyboard.TargetProperty="Height"
                                                     To="62.5"
                                                     Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ContentViewbox"
                                                     Storyboard.TargetProperty="Width"
                                                     To="200"
                                                     Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ContentViewbox"
                                                     Storyboard.TargetProperty="Height"
                                                     To="50"
                                                     Duration="0:0:0.2">
                                                <DoubleAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <!-- Selected Animation -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Foreground" Value="#2F6BFF"/>
                                <Setter TargetName="Bullet" Property="Visibility" Value="Collapsed"/>
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ContentViewbox"
                                                     Storyboard.TargetProperty="Width"
                                                     To="400"
                                                     Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="ContentViewbox"
                                                     Storyboard.TargetProperty="Height"
                                                     To="125"
                                                     Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Storyboard.TargetName="TranslateTransform"
                                                     Storyboard.TargetProperty="X"
                                                     To="20"
                                                     Duration="0:0:0.3">
                                                <DoubleAnimation.EasingFunction>
                                                    <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        To="0,30,0,30"
                                                        Duration="0:0:0.3">
                                                <ThicknessAnimation.EasingFunction>
                                                    <QuadraticEase EasingMode="EaseOut"/>
                                                </ThicknessAnimation.EasingFunction>
                                            </ThicknessAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ContentViewbox"
                                                     Storyboard.TargetProperty="Width"
                                                     To="150"
                                                     Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ContentViewbox"
                                                     Storyboard.TargetProperty="Height"
                                                     To="50"
                                                     Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="TranslateTransform"
                                                     Storyboard.TargetProperty="X"
                                                     To="0"
                                                     Duration="0:0:0.2"/>
                                            <ThicknessAnimation Storyboard.TargetProperty="Margin"
                                                        To="0,8,0,8"
                                                        Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>

                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SubButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#ECE8E1"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="10,5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="#FF4655"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Login_Background.png" 
                        Stretch="UniformToFill" 
                        Opacity="0.4"/>
        </Grid.Background>

        <Grid>
            <Grid.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1,0.5">
                    <GradientStop Color="#0F1923" Offset="0.0"/>
                    <GradientStop Color="#CC0F1923" Offset="0.3"/>
                    <GradientStop Color="Transparent" Offset="1.0"/>
                </LinearGradientBrush>
            </Grid.Background>
        </Grid>

        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="50,0,0,0">
            <RadioButton Content="PLAY" Style="{StaticResource ValorantMenuItem}" GroupName="Menu" VerticalAlignment="Center"/>
            <RadioButton Content="HISTORY" Style="{StaticResource ValorantMenuItem}" GroupName="Menu"/>
            <RadioButton Content="SOCIAL" Style="{StaticResource ValorantMenuItem}" GroupName="Menu"/>
            <RadioButton Content="SETTINGS" Style="{StaticResource ValorantMenuItem}" GroupName="Menu"/>
            <RadioButton Content="QUIT" Style="{StaticResource ValorantMenuItem}" GroupName="Menu"/>
        </StackPanel>
    </Grid>
</Window>