<Page x:Class="Gomoku_Client.SignUpUserInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gomoku_Client"
        xmlns:converters="clr-namespace:Gomoku_Client.Converters"
        mc:Ignorable="d"
        Title="Đăng kí tài khoản"
        Background="#F0F0F0" 
        Height="720" Width="1280" >
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Width="1280" Height="720">
        <Grid.Background>
            <ImageBrush ImageSource="/Assets/Login_Background.png" 
                Stretch="UniformToFill"
                Opacity="1"/>
        </Grid.Background>
        
        <Border x:Name="MainBorder" Background="Black"
             BorderBrush="#FF4655"
             BorderThickness="2"
             CornerRadius="0"
             Padding="20"
             Width="410"
             Height="380"
             HorizontalAlignment="Center"
             VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Label đăng ký -->
                <TextBlock Text="Đăng kí tài khoản"
                 Grid.Row="0"
                 HorizontalAlignment="Center"
                 VerticalAlignment="Center"
                 Foreground="#FF4655"  
                 FontFamily="Segoe UI"
                 FontSize="24"         
                 FontWeight="Bold"
                 Margin="0,0,0,20"/>

                <!-- Textbox Username-->
                <Border x:Name="UsernameBorder" Grid.Row="1"
                 Background="#121212"
                CornerRadius="0"
                BorderBrush="#2A2A2A"
                 BorderThickness="2"
                 Padding="2">
                    <TextBox x:Name="UsernameBox"
                     CaretBrush="White"
                     Height="36"
                     FontSize="14"
                     Padding="10,7"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="Gray"
                     FontFamily="Segoe UI"
                     FontWeight="SemiBold"
                     FontStyle="Normal"
                     Text="Tên người dùng"
                     GotFocus="UsernameBox_GotFocus"
                     LostFocus="UsernameBox_LostFocus"
                     MaxLength="15"
                     PreviewTextInput="UsernameBox_PreviewTextInput"
                     PreviewKeyDown="UsernameBox_PreviewKeyDown"/>
                </Border>

                <!-- Thông báo tên trùng -->
                <TextBlock x:Name="UsernameMsg" 
                   Text="Tên đã được sử dụng"
                   Grid.Row="2"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Foreground="#FF4655"  
                   FontFamily="Segoe UI"
                   FontSize="12"         
                   FontWeight="Bold"
                   Margin="9,0,0,0"
                   Visibility="Collapsed"/>

                <!-- Textbox Email-->
                <Border x:Name="EmailBorder" Grid.Row="3"
                     Background="#121212"
                    CornerRadius="0"
                    BorderBrush="#2A2A2A"
                     BorderThickness="2"
                     Padding="2"
                     Margin="0,15,0,0">
                    <TextBox x:Name="EmailBox"
                     Height="36"
                     CaretBrush="White"
                     FontSize="14"
                     Padding="10,7"
                     Background="Transparent"
                     BorderThickness="0"
                     Foreground="Gray"
                     FontFamily="Segoe UI"
                     FontWeight="SemiBold"
                     FontStyle="Normal"
                     Text="Email"
                     GotFocus="EmailBox_GotFocus"
                     LostFocus="EmailBox_LostFocus"
                     PreviewKeyDown="EmailBox_PreviewKeyDown"/>
                </Border>

                <!-- Thông báo Email trùng -->
                <TextBlock x:Name="EmailMsg" 
                   Text="Email đã được sử dụng cho tài khoản khác"
                   Grid.Row="4"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Foreground="#FF4655"  
                   FontFamily="Segoe UI"
                   FontSize="12"         
                   FontWeight="Bold"
                   Margin="9,0,0,0"
                   Visibility="Collapsed"/>

                <!-- PasswordBox -->
                <Border x:Name="PasswordBorder" Grid.Row="5"
                 Background="#121212"
                CornerRadius="0"
                BorderBrush="#2A2A2A"
                BorderThickness="2"
                 Padding="2"
                 Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox x:Name="PasswordBox"
                            CaretBrush="White"
                            Height="36"
                            FontSize="14"
                            Padding="10,7"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontFamily="Segoe UI"
                            FontWeight="SemiBold"
                            FontStyle="Normal"
                            PasswordChanged="PasswordBox_PasswordChanged"
                            LostFocus="PasswordBox_LostFocus"
                            PreviewKeyDown="PasswordBox_PreviewKeyDown"
                            GotFocus="PasswordBox_GotFocus"/>
                        
                        <TextBlock x:Name="PasswordPlaceholder"
                            Text="Mật khẩu"
                            Foreground="Gray"
                            FontSize="14"
                            FontFamily="Segoe UI"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"
                            Margin="12,0,0,0"
                            IsHitTestVisible="False"
                            Visibility="{Binding ElementName=PasswordBox, Path=Password, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>

                        <TextBox x:Name="PasswordVisible"
                             CaretBrush="White"
                             Height="36"
                             FontSize="14"
                             Padding="10,7"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             FontFamily="Segoe UI"
                             FontWeight="SemiBold"
                             Visibility="Collapsed"
                             PreviewKeyDown="PasswordVisible_PreviewKeyDown"
                             TextChanged="PasswordVisible_TextChanged"
                             Grid.ColumnSpan="2"
                             LostFocus="PasswordVisible_LostFocus"
                             GotFocus="PasswordVisible_GotFocus"/>

                        <Button x:Name="TogglePasswordBtn"
                            Grid.Column="1"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="TogglePasswordBtn_Click">
                            <Path x:Name="TogglePasswordIcon"
                                  Data="{StaticResource EyeIcon}"
                                  Fill="#FF4655"
                                  Stretch="Uniform"
                                  Width="18"
                                  Height="18"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Thông báo mật khẩu không hợp lệ -->
                <TextBlock x:Name="PasswordMsg" 
                   Text="Mật khẩu không được dưới 6 ký tự"
                   Grid.Row="6"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Foreground="#FF4655"  
                   FontFamily="Segoe UI"
                   FontSize="12"         
                   FontWeight="Bold"
                   Margin="9,0,0,0"
                   Visibility="Collapsed"/>

                <!-- Password Confirm Box -->
                <Border x:Name="PasswordConfirmBorder" Grid.Row="7"
                    Background="#121212"
                    CornerRadius="0"
                    BorderBrush="#2A2A2A"
                    BorderThickness="2"
                    Padding="2"
                    Margin="0,15,0,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="35"/>
                        </Grid.ColumnDefinitions>
                        <PasswordBox x:Name="PasswordConfirmBox"
                            CaretBrush="White"
                            Height="36"
                            FontSize="14"
                            Padding="10,7"
                            Background="Transparent"
                            BorderThickness="0"
                            Foreground="White"
                            FontFamily="Segoe UI"
                            FontWeight="SemiBold"
                            FontStyle="Normal"
                            PasswordChanged="PasswordConfirmBox_PasswordChanged"
                            LostFocus="PasswordConfirmBox_LostFocus"
                            PreviewKeyDown="PasswordConfirmBox_PreviewKeyDown"
                            GotFocus="PasswordConfirmBox_GotFocus"/>
                        
                        <TextBlock x:Name="PasswordConfirmPlaceholder"
                            Text="Xác nhận mật khẩu"
                            Foreground="Gray"
                            FontSize="14"
                            FontFamily="Segoe UI"
                            FontWeight="SemiBold"
                            VerticalAlignment="Center"
                            Margin="12,0,0,0"
                            IsHitTestVisible="False"
                            Visibility="{Binding ElementName=PasswordConfirmBox, Path=Password, Converter={StaticResource StringEmptyToVisibilityConverter}}"/>

                        <TextBox x:Name="PasswordConfirmVisible"
                             CaretBrush="White"
                             Height="36"
                             FontSize="14"
                             Padding="10,7"
                             Background="Transparent"
                             BorderThickness="0"
                             Foreground="White"
                             FontFamily="Segoe UI"
                             FontWeight="SemiBold"
                             Visibility="Collapsed"
                             PreviewKeyDown="PasswordConfirmVisible_PreviewKeyDown"
                             TextChanged="PasswordConfirmVisible_TextChanged"
                             Grid.ColumnSpan="2"
                             LostFocus="PasswordConfirmVisible_LostFocus"
                             GotFocus="PasswordConfirmVisible_GotFocus"/>

                        <Button x:Name="TogglePasswordConfirmBtn"
                            Grid.Column="1"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="30"
                            Height="30"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Click="TogglePasswordConfirmBtn_Click">
                            <Path x:Name="TogglePasswordConfirmIcon"
                                  Data="{StaticResource EyeIcon}"
                                  Fill="#FF4655"
                                  Stretch="Uniform"
                                  Width="18"
                                  Height="18" RenderTransformOrigin="0.5,0.659"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Thông báo xác nhận mật khẩu không khớp -->
                <TextBlock x:Name="PasswordConfirmMsg" 
                   Text="Mật khẩu không khớp"
                   Grid.Row="8"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Bottom"
                   Foreground="#FF4655"  
                   FontFamily="Segoe UI"
                   FontSize="12"         
                   FontWeight="Bold"
                   Margin="9,0,0,0"
                   Visibility="Collapsed"/>
                
                <!-- Hai nút -->
                <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0" >
                    <Button 
                     Content="Quay lại"
                     Width="170"
                    Height="40"
                    Background="White"
                    Foreground="#FF4655"
                    FontFamily="Segoe UI"
                    FontSize="16"
                    FontWeight="Bold"
                    Padding="10,5"
                    BorderBrush="White"
                    BorderThickness="0"
                    Cursor="Hand" 
                     Margin="0,0,0,0" Click="GoBack_Click"/>

                    <Button 
                       Content="Đăng Ký Mới"
                       Width="170"
                       Height="40"
                       Background="#FF4655"
                       Foreground="White"
                       FontFamily="Segoe UI"
                       FontSize="16"
                       FontWeight="Bold"
                       Padding="10,5"
                       BorderBrush="#FF4655"
                       BorderThickness="0"
                       Cursor="Hand" 
                     Margin="15,0,0,0" Click="DangKi_Click"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Page>
