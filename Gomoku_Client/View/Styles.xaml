    <!-- Style cho nút Back trên thanh điều hướng -->
    <Style x:Key="BackButton" TargetType="RadioButton">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#FFFFFF"/>
        <Setter Property="FontFamily" Value="Segoe UI Black"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Padding" Value="20,10"/>
        <Setter Property="Margin" Value="10,0,0,0"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="RadioButton">

                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >

                            <!-- Arrow Icon (Valorant-like) -->
                            <Path x:Name="ArrowIcon"
                              Data="M 12 0 L 0 12 L 12 24 L 16 20 L 8 12 L 16 4 Z"
                              Fill="{TemplateBinding Foreground}"
                              Width="20" Height="18"
                              Stretch="Uniform"
                              Margin="0,3,5,0"
                              RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <TranslateTransform x:Name="IconTranslate" X="0" Y="0"/>
                                </Path.RenderTransform>
                            </Path>

                            <!-- TEXT -->
                            <ContentPresenter x:Name="ContentText"
                                          VerticalAlignment="Center"
                                          RecognizesAccessKey="True"
                                          Content="{TemplateBinding Content}"
                                          ContentStringFormat="{TemplateBinding ContentStringFormat}"
                                          ContentTemplate="{TemplateBinding ContentTemplate}">
                                <ContentPresenter.RenderTransform>
                                    <TranslateTransform x:Name="TextTranslate" X="0" Y="0"/>
                                </ContentPresenter.RenderTransform>
                            </ContentPresenter>

                        </StackPanel>

                    

                    <!-- TRIGGERS -->
                    <ControlTemplate.Triggers>

                        <!-- HOVER -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ArrowIcon" Property="Fill" Value="#FF1FF6C7"/>
                            <Setter Property="Foreground" Value="#FF1FF6C7"/>

                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>

                                        <DoubleAnimation Storyboard.TargetName="TextTranslate"
                                                     Storyboard.TargetProperty="X"
                                                     To="10"
                                                     Duration="0:0:0.15"/>

                                        <DoubleAnimation Storyboard.TargetName="IconTranslate"
                                                     Storyboard.TargetProperty="X"
                                                     To="-5"
                                                     Duration="0:0:0.15"/>

                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>

                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>

                                        <DoubleAnimation Storyboard.TargetName="TextTranslate"
                                                     Storyboard.TargetProperty="X"
                                                     To="0"
                                                     Duration="0:0:0.15"/>

                                        <DoubleAnimation Storyboard.TargetName="IconTranslate"
                                                     Storyboard.TargetProperty="X"
                                                     To="0"
                                                     Duration="0:0:0.15"/>

                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>

                        <!-- Khi chưa được chọn thì nhạt nhẹ  -->
                        <Trigger Property="IsChecked" Value="False">
                            <Setter Property="Opacity" Value="0.85"/>
                        </Trigger>

                    </ControlTemplate.Triggers>

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

